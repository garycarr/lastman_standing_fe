<form id={{id}}>
  {{#if register}}
    <label {{dataTagPrefix}}-full-name for="full-name">{{fullName}}</label>
    <input id="{{id}}-full-name" type="text" value="" />
    <label {{dataTagPrefix}}-error-full-name hidden>{{missingFullName}}</label>
    </br>
  {{/if}}
  <label {{dataTagPrefix}}-username for="username">{{username}}</label>
  <input id="{{id}}-username" type="text" value="" />
  <label {{dataTagPrefix}}-error-username hidden>{{missingUsername}}</label>
  </br>
  <label {{dataTagPrefix}}-password for="password">{{password}}</label>
  <input id="{{id}}-password" type="password" value="" />
  <label {{dataTagPrefix}}-error-password hidden>{{missingPassword}}</label>
  </br>
  <input id="{{id}}-submit" type="submit" value="{{submit}}"
  </br>
  <label {{dataTagPrefix}}-error hidden>{{submitError}}</label>
</form>
